.video-player {
  .video-container {
    cursor: pointer;
    position: relative;
    overflow: hidden;

    .presenting {
    }

    .play {
      position: absolute;
      top: 50%;
      left: 50%;
      margin-top: -36px;
      margin-left: -36px;
      height: 72px;
      width: 72px;
      overflow: hidden;
      background: black;
      line-height: 72px;
      text-align: center;
      font-size: 20px;
      text-transform: uppercase;
      color: white;
      font-weight: 700;
      border-radius: 50%;
    }

    .playVideo {
      position: absolute;
      top: 50%;
      left: 50%;
      margin-top: -36px;
      margin-left: -36px;
      height: 72px;
      width: 72px;
      overflow: hidden;
      background-color: black;
      text-indent: -999px;
      border-radius: 35px;

      &:after {
        content: ' ';
        width: 60px;
        height: 60px;
        background: url('https://localhost:6969/assets/icon-video-play.png') 50% no-repeat;
        background-size: 60px 60px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -30px;
        margin-top: -30px;
      }
    }

    .sound-toggle {
      position: absolute;
      bottom: 16px;
      left: 16px;
      width: 36px;
      height: 36px;
      background-color: rgba(0, 0, 0, 0.8);
      border-radius: 50%;
      cursor: pointer;

      span {
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        width: 30px;
        height: 30px;
        margin-left: -15px;
        margin-top: -15px;
      }
    }

    .off {
      background: url('https://localhost:6969/assets/sprite.png') -240px -30px no-repeat;
      background-size: 510px 120px;
    }

    .on {
      background: url('https://localhost:6969/assets/sprite.png') -270px -30px no-repeat;
      background-size: 510px 120px;
    }

    .length {
      position: absolute;
      background-color: rgba(0, 0, 0, 0.8);
      bottom: 16px;
      right: 16px;
      height: 24px;
      color: white;
      text-align: right;
      line-height: 24px;
      border-radius: 12px;
      padding: 0 8px;
    }
  }
}